#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

// 완전수 판별 함수
int is_complete(int n) {
    int sum = 0;
    
    // 1부터 n/2까지의 숫자 중 약수를 찾아서 더함
    for (int i = 1; i <= n / 2; i++) {
        if (n % i == 0) {  // n의 약수일 경우
            sum += i;
        }
    }
    
    // 약수들의 합이 n과 같으면 완전수
    if (sum == n) {
        return 1;  // 완전수
    } else {
        return 0;  // 완전수가 아님
    }
}

int main() {
    int n;
    
    // 사용자로부터 자연수 입력 받기
    printf("Enter a natural number: ");
    scanf("%d", &n);
    
    // 완전수인지 확인 후 출력
    if (is_complete(n)) {
        printf("YES\n");  // 완전수이면 YES 출력
    } else {
        printf("NO\n");   // 완전수가 아니면 NO 출력
    }

    return 0;
}
