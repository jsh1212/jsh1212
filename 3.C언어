#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

#define VALUE 10000

void draw_diamonds(int n) {
    for (int i = 0; i < n; i++) {
        // 속이 꽉 찬 마름모
        for (int j = 0; j < n - i - 1; j++) printf(" ");
        for (int j = 0; j < 2 * i + 1; j++) printf("*");
        
        // 두 마름모 사이의 간격
        printf("  ");
        
        // 속이 빈 마름모
        for (int j = 0; j < n - i - 1; j++) printf(" ");
        for (int j = 0; j < 2 * i + 1; j++) {
            if (j == 0 || j == 2 * i) printf("*");
            else printf(" ");
        }
        printf("\n");
    }

    for (int i = n - 2; i >= 0; i--) {
        // 속이 꽉 찬 마름모
        for (int j = 0; j < n - i - 1; j++) printf(" ");
        for (int j = 0; j < 2 * i + 1; j++) printf("*");
        
        // 두 마름모 사이의 간격
        printf("  ");
        
        // 속이 빈 마름모
        for (int j = 0; j < n - i - 1; j++) printf(" ");
        for (int j = 0; j < 2 * i + 1; j++) {
            if (j == 0 || j == 2 * i) printf("*");
            else printf(" ");
        }
        printf("\n");
    }
}

int main() {
    int n;
    printf("마름모의 변의 길이를 입력하세요: ");
    scanf("%d", &n);
    
    if (n <= 0 || n >= VALUE) {
        printf("유효한 값 (1 ~ 9999)을 입력하세요.\n");
        return 1;
    }

    draw_diamonds(n);
    return 0;
}
